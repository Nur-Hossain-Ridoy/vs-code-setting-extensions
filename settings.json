
{
  // editor
  "editor.fontFamily": "Fira Code, Operator Mono",
  "editor.fontSize": 16,
  "workbench.colorTheme": "Default Dark+ Experimental",
  "editor.fontLigatures": true,
  "editor.wordWrap": "on",
  "editor.minimap.enabled": true,
  // cursor
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "expand",
  // config related to code formatting
  "editor.formatOnSave": true,
  // terminal intregrated fontsize
  "terminal.integrated.fontSize": 17,
  "terminal.integrated.fontWeight": "normal",
  "terminal.integrated.fontFamily": "Fira Code",
  "workbench.startupEditor": "none",
  "terminal.integrated.defaultProfile.linux": "JavaScript Debug Terminal",
  "workbench.colorCustomizations": {
    "statusBar.background": "#191825",
    // active tab
    "tab.activeBackground": "#7286D3",
    "tab.activeForeground": "#fff",
    "tab.activeBorder": "#16FF00",
    "tab.hoverBackground": "#7286D3",
    "tab.hoverForeground": "#fff",
  }
}
